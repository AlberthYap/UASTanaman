<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"

        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/img_tanaman"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nama"
            android:text="nama"
            android:layout_marginStart="26dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/img_tanaman"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_harga"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:text="harga"
            android:textSize="18sp"
            android:layout_toRightOf="@id/img_tanaman"
            android:layout_below="@+id/tv_nama"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_keterangan"
            android:layout_marginStart="26dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_tanaman"
            android:layout_below="@id/tv_harga"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="keterangan"
            />

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/img_tanaman"
            android:background="#A9A9A9"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>